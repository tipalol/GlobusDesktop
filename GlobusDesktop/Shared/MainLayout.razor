@code
{
    private string UpdateLanguage()
    {
        CultureInfo.CurrentCulture = new CultureInfo(CultureHelper.DefaultCulture());
        return "";
    }

    protected async override Task OnInitializedAsync()
    {
        UpdateLanguage();
    }
